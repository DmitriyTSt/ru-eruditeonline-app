<resources>
    <!-- Base application theme. -->
    <style name="Theme.EruditeOnline" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_pea</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/kaitoke_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_pea</item>
        <item name="colorSecondaryVariant">@color/green_pea</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/sweet_corn</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="brandBackground">@color/sweet_corn</item>
        <item name="appBarBackgroundColor">?colorPrimary</item>
        <item name="appBarTextColor">?colorOnPrimary</item>
        <item name="appBarIndicatorColor">?colorOnPrimary</item>

        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="appBarLayoutStyle">@style/AppBarLayoutStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="android:toolbarStyle">@style/ToolbarStyle</item>
        <item name="recyclerViewStyle">@style/RecyclerViewStyle</item>
        <item name="materialButtonStyle">@style/MaterialButtonStyle</item>
        <item name="buttonStyle">@style/MaterialButtonStyle</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
        <item name="tabStyle">@style/TabStyle</item>
        <item name="alertDialogStyle">@style/AlertDialogTheme</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>

        <item name="iconBack">@drawable/ic_back</item>
        <item name="iconClose">@drawable/ic_close</item>
        <item name="iconViewTypeCard">@drawable/ic_view_type_card</item>
        <item name="iconViewTypeRow">@drawable/ic_view_type_row</item>
        <item name="iconFilter">@drawable/ic_filter</item>
        <item name="iconSearch">@drawable/ic_search</item>
    </style>

    <style name="Theme.EruditeOnline.Light">
        <item name="android:windowBackground">@color/white</item>

        <item name="appBarBackgroundColor">?colorSurface</item>
        <item name="appBarTextColor">?colorOnSurface</item>
        <item name="appBarIndicatorColor">?colorPrimary</item>

        <item name="appBarLayoutStyle">@style/AppBarLayoutStyle.Light</item>
        <item name="tabStyle">@style/TabStyle.Light</item>

        <item name="iconBack">@drawable/ic_back_dark</item>
        <item name="iconClose">@drawable/ic_close_dark</item>

        <item name="iconViewTypeCard">@drawable/ic_view_type_card_dark</item>
        <item name="iconViewTypeRow">@drawable/ic_view_type_row_dark</item>
        <item name="iconFilter">@drawable/ic_filter_dark</item>
        <item name="iconSearch">@drawable/ic_search_dark</item>
    </style>

    <style name="RatingBarTheme" parent="Theme.EruditeOnline">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/selective_yellow</item>
    </style>

    <style name="StartTheme" parent="Theme.EruditeOnline">
        <item name="android:windowBackground">@drawable/bg_start</item>
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>
</resources>