<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EruditeOnline" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_pea</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/kaitoke_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sweet_corn</item>
        <item name="colorSecondaryVariant">@color/fuel_yellow</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>